@inject TabSetTool TabSetTool
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand">多标签页</a>
    </div>
</div>

<div>
    <nav class="flex-column">
        <div class="nav-item px-3">
            <a class="nav-link" @onclick="@(e =>GoTo("首页","/"))">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </a>
        </div>
        <div class="nav-item px-3">
            <a class="nav-link" @onclick="@(e => GoTo("计数器","/counter"))">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </a>
        </div>
        <div class="nav-item px-3">
            <a class="nav-link" @onclick="@(e => GoTo("列表","/fetchdata"))">
                <span class="oi oi-list-rich" aria-hidden="true"></span> 权限管理
            </a>
        </div>
    </nav>
</div>


@code {

    int i = 0;

    private void GoTo(string title, string url)
    {
        if (i > 50)
        {
            i = 0;
        }
        i++;

        title = title + i;
        TabSetTool.AddTab(title, url);
    }
